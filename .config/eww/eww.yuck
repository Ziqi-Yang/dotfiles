(defwindow avatar
  :monitor 0
  :geometry (geometry :x "40%"
                      :y "40%"
                      :width "20%"
                      :height "20%")
  :wm-ignore false
  :stacking "fg"
  :windowtype "normal"
  (greeter :text "Say Hello" :name "Zarkli Leonardo"))

(defwidget greeter [?text name]
  (box :orientation "horizontal"
       :align "center"
    text
    (button :onclick "notify-send 'Hello' 'Hello, ${name}'"
      "Greet")))

# use xev command to see the key name & code

#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

super + x
	alacritty --class floating

# program launcher
# origin: super + @space
super + space
	rofi -show combi -show-icons

alt + Tab
	bspc node --focus next.local.window

super + a
	rofi -no-lazy-grab -show drun -theme ~/.local/share/rofi/themes/launchpad.rasi -show-icons

# hide/show window
super + h
	bspc node focused -g hidden=on

super + e
	doom +everywhere


# resize window by using mouse to draw a rectangle
super + r
	/home/zarkli/myBin/window_sizer

# rofi calc
alt + c
  rofi -show calc -modi calc -no-show-match -no-sort -calc-command "echo -n '\{result\}' | xclip -sel clip; xdotool type --clearmodifiers '\{result\}'"

# clipboard
alt + v
	rofi -modi "clipboard:greenclip print" -show clipboard

# desktop(i.e. bottom stack) right click -> show jgmenu
~button3
	bspc query -D -d 'focused.!occupied' \
	    && jgmenu_run >/dev/null 2>&1 &

# screen shot full screen
Print
	flameshot full

# screenshot selection
super + shift + s
	flameshot gui

# lockscreen
alt + shift + x
    betterlockscreen -l dimblur

# use super + mouse right click to show jgmenu
super + shift + button3
		jgmenu_run >/dev/null 2>&1 &

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.local.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set(toggle) the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel




# Audio
XF86AudioRaiseVolume
	amixer set Master 5%+
XF86AudioLowerVolume
	amixer set Master 5%-
XF86AudioMute
	amixer set Master {mute, unmute}

# Brightness control
XF86MonBrightness{Up,Down}
	brightnessctl s 10%{+,-}


[interactive]
	diffFilter = delta --color-only --features=interactive
[delta]
	features = mantis-shrimp # coracias-caudatus mantis-shrimp woolly-mammoth tangara-chilensis hoopole
	line-numbers = true
	side-by-side = true
    navigate = true    # use n and N to move between diff sections
	hyperlinks = true

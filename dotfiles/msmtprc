# example configuration: https://marlam.de/msmtp/msmtp.html#Examples
# or /usr/share/doc/msmtp/msmtprc-user.example
# archwiki: https://wiki.archlinux.org/title/msmtp
defaults
auth on
tls on
tls_trust_file /etc/ca-certificates/extracted/tls-ca-bundle.pem
port 587
# NOTE: some proxy provider may not support sometimes
# proxy_host 127.0.0.1
# proxy_port 7890
logfile ~/.msmtp.log

# Gmail
# enable two factor, and add a new "app-password" for msmtp
# see this: https://support.google.com/mail/answer/7126229?hl=en#zippy=%2Ci-cant-sign-in-to-my-email-client
# then probably you will encounter errors when you send email using msmtp in the day doing configuration
# but try another day(and in the next day I succeeded)
account gmail
host smtp.gmail.com
user mr.ziqiyang@gmail.com
from mr.ziqiyang@gmail.com
passwordeval pass gmail-msmtp-password

account autistici
host smtp.autistici.org
user mr.meowking@anche.no
from mr.meowking@anche.no
passwordeval pass mr.meowking@anche.no

account default : autistici
